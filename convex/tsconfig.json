{
  "compilerOptions": {
    "allowJs": true,
    "strict": true,
    "target": "ESNext",
    "lib": ["ES2021", "DOM"],
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "Bundler",
    "module": "ESNext",
    "noEmit": true,
    "jsx": "react-jsx",
    "paths": {
      "@/*": ["../*"]
    }
  },
  "include": ["./**/*"],
  "exclude": ["../node_modules"]
}
